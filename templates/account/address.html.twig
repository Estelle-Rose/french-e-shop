{% extends 'base.html.twig' %}

{% block title %}Mes adresses - La boutique française{% endblock %}

{% block content %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 1140px; min-height: 80vh; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        .card-text {
            font-size: 16px !important;
        }
    </style>

    <div class="example-wrapper">
            <a href="{{ path('add_address') }}" class="btn btn-sm btn-primary float-right">Ajouter une adresse</a>
        <h1 class=""> Mes adresses</h1>
        <p>C'est dans cet espace que vous pouvez gérer vos adresses.</p>
        <a href="{{ path('account') }}">Retour </a> <br/>
        <hr>
        {% if app.user.addresses|length == 0 %}
        <p class="">Vous n'avez pas encore ajouté d'adresse dans votre compte client, pour en ajouter une <a
                    href="{{ path('add_address') }}">cliquez ici</a>.
        </p>
        {% else %}
            <div class="row no-gutters">
            {% for address in app.user.addresses %}
                <div class="col-sm-10 col-md-6 col-lg-4 mx-auto">
                    <div class="card" style="width:18rem;">
                        <div class="card-header">{{ address.name }}</div>
                        <div class="card-body">
                            <p class="card-text">{{ address.address}}</p>
                            <p class="card-text"> {{ address.postcode }} - {{ address.city }} - {{ address.country }}</p>
                             <a href="{{ path('update_address', {'id': address.id}) }}" >Modifier</a> | <a href="{{ path('delete_address', {'id': address.id}) }}" >Supprimer</a>

                        </div>
                    </div>
                </div>

            {% endfor %}
            </div>

        {% endif %}


    </div>
{% endblock %}