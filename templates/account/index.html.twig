{% extends 'base.html.twig' %}

{% block title %}Mon compte - La boutique française{% endblock %}

{% block content %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; min-height: 80vh; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1 class="text-center mb-5"> Mon compte</h1>
    <p class="text-center">Bienvenue dans votre compte {{ app.user.firstname}} !<br/>
    C'est dans cet espace que vous pouvez gérer vos informations personnelles</p>
    <hr>
    <div class="row ">
        <div class="col-md-6 ">

            {% if is_granted('ROLE_ADMIN') %}
                    <div class="d-flex  align-items-center">
                        <div>
                        <span style="font-size: 2rem;">
                          <span style="color: #1b1e21;">
                          <i class="fas fa-user-shield mr-2 mt-1" size="36px"></i>
                          </span>
                        </span>
                        </div>
                        <a href="{{ path('admin') }}"> Accès au backoffice</a>
                     </div>
             {% endif %}
            <div class="d-flex  align-items-center">
                <div >
                        <span style="font-size: 2rem;">
                          <span style="color: #1b1e21;">
                          <i class="fas fa-shopping-bag mr-2 mt-1" size="36px"></i>
                          </span>
                        </span>
                </div>
                <a href="{{ path('account_order') }}"> Mes commandes</a>
            </div>
            <div class="d-flex  align-items-center">
                <div>
                        <span style="font-size: 2rem;">
                          <span style="color: #1b1e21;">
                          <i class="fas fa-map-marker-alt mr-2 mt-1" size="36px"></i>
                          </span>
                        </span>
                </div>
                <a href="{{ path('address') }}"> Gérer mes adresses</a>
            </div>
            <div class="d-flex  align-items-center">
                <div>
                        <span style="font-size: 2rem;">
                          <span style="color:#1b1e21;">
                          <i class="fas fa-key mr-2 mt-1" size="36px"></i>
                          </span>
                        </span>
                </div>
                <a href="{{ path('account_password') }}" class=""> Modifier mon mot de passe</a>
            </div>
        </div>
    </div>


</div>
{% endblock %}