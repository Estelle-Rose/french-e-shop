{% extends 'base.html.twig' %}

{% block title %}Hello RegisterController!{% endblock %}

{% block content %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; height: 100%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1 class="text-center mb-5">Inscription</h1>
    <div class="card py-5 px-2 mx-auto " style="width:35rem;">
        {{ form_start(form) }}
        <div class="form-group ">
        {{ form_widget(form) }}
        </div>
        <div class="text-center ">
         <input type="submit" class="btn btn-primary " value="S'inscrire">

        </div>
        {{ form_end(form) }}
    </div>

</div>
{% endblock %}
