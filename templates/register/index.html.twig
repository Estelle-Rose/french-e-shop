{% extends 'base.html.twig' %}

{% block title %}Hello RegisterController!{% endblock %}

{% block content %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; min-height: 90vh;  font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <div class="row pt-2 pb-5 mx-auto">
        <div class="col-md-8 mb-5 pb-5 mx-auto">
            <h1 class="h3 mb-3">S'inscrire</h1>
            {% if notification %}
                <div class="alert alert-info">{{ notification }}</div>
                <hr>
            {% endif %}
            <div class="card p-3 mx-auto " style="width:35rem;">
                {{ form_start(form) }}
                <div class="form-group ">
                {{ form_widget(form) }}
                </div>

                {{ form_end(form) }}
            </div>

        </div>

    </div>

</div>
{% endblock %}