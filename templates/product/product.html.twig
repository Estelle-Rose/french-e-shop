{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - La boutique française{% endblock %}

{% block content %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 1140px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }

</style>

<div class="example-wrapper">
    <h1 class="text-center title">{{ product.name }}</h1>
    <hr class="title-divider">
    <div class="row py-5">

        <div class="col-12 col-md-10  mx-auto py-8">
            <div class=" p-3 m-2" >
                <div class="row flex-row-reverse">
                    <div class="col-md-6 align-items-center ">
                        <div class="card-image mx-auto">
                            <img src="/uploads/{{ product.image }}" alt="{{ product.name }}" class="mx-auto img-fluid">
                        </div>
                    </div>
                    <div class="col-md-6 my-auto ">
                        <p class="card-title text-uppercase font-weight-bold "> {{ product.name }}</p>
                        <p class="d-block ">{{ product.subtitle }}</p>
                        <hr>
                        <p class="d-block ">{{ product.description }}</p>

                        <div class="d-flex justify-content-around">
                        <span class=" text-primary">{{ (product.price/100)|number_format(2, '.', ',') }} €</span>
                          <a href="#" class="btn btn-primary btn-sm">Ajouter au panier</a>

                        </div>
                    </div>

                </div>



            </div>
        </div>



    </div>
</div>
{% endblock %}
